extends layout

block header
  script(src="javascripts/jquery-1.12.1.js")
  script(src="javascripts/Chart.js")
  script(src="javascripts/ajax.js")
  script(src="javascripts/jquery.uploadfile.js")
  script(src="javascripts/FileSaver.js")
  link(rel='stylesheet', href="stylesheets/uploadfile.css")
    
block content
  h1= title

  p#stats Currently we have an unknown number of log files with an unknown number of entries.

  h2 Log Query
  form#queryForm
    fieldset
      div
        label Message?
        input#message(type="text", name="message")
      div
        label Service?
        input#service(type="text", name="service")
      div
        label File?
        input#file(type="text", name="file")
      div
        label Month?
        input#month(type="text", name="month")
      div
        label Day?
        input#day(type="text", name="day")
      div
        label Output Type:
          select(id="queryType", name="queryType")
            option(value="show", selected) Show
            option(value="visualize") Visualize
            option(value="download") Download
      div
        label Find or Delete:
         select(id="fdType", name="fdType")
            option(value="find", selected) Find
            option(value="delete") Delete

      br
      button#update(type="button") Update

  br
  div#uploadBtn
   label Upload Log

  div#canvas